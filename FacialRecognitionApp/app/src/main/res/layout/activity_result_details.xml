<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">


    <ImageView
        android:id="@+id/resultImage"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_weight="50"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/testingtesting"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="187dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/emotion_anger"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:text="anger"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emotion_disgust"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:text="disgust"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emotion_fear"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:text="fear"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emotion_happiness"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:text="happiness"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emotion_sadness"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:text="sadness"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emotion_surprise"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:text="surprise"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/neutral"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:text="neutral"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>