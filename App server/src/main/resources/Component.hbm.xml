<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="de.tum.ipraktikum.database.ComponentEntity" table="component">

        <meta attribute="class-description">
            This class contains the components detail.
        </meta>

        <id name="articleNumber" column="article_number" type="string"/>

        <property name="weight" column="weight" type="double"/>
        <property name="width" column="width" type="double"/>
        <property name="price" column="price" type="double"/>
        <property name="powerLoss" column="power_loss" type="double"/>
        <property name="numDinput" column="num_dinput" type="int"/>
        <property name="numDoutput" column="num_doutput" type="int"/>
        <property name="numAinput" column="num_ainput" type="int"/>
        <property name="numAoutput" column="num_aoutput" type="int"/>
        <property name="voltage" column="voltage" type="int"/>
        <property name="deliveryTime" column="delivery_time" type="int"/>
        <property name="cadModelLink" column="cad_model_link" type="string"/>
    </class>
</hibernate-mapping>